@model AdoCurd.Models.User

<form asp-action="Update" method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input type="text" class="form-control" asp-for="Name">
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Age">Age</label>
        <input type="number" class="form-control" asp-for="Age">
        <span asp-validation-for="Age"></span>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" value="Male" asp-for="Gender">
        <label class="form-check-label" asp-for="Gender">
            Male
        </label>
    </div>

    <div class="form-check">
        <input class="form-check-input" type="radio" name="gender" value="Female" asp-for="Gender">
        <label class="form-check-label" asp-for="Gender">
            Female
        </label>
    </div>

    <span asp-validation-for="Gender"></span>


    <button type="submit" class="btn btn-primary">Submit</button>
</form>
