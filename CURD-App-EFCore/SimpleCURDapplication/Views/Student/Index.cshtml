@* importing the model  *@
@model IEnumerable<SimpleCURDapplication.Models.Student>

@{
	//this is the title of page
	ViewData["Title"] = "Students";
}

<button class="btn btn-primary">
	<a class="text-white text-decoration-none" asp-action="AddStudents">Add Students</a>
</button>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>Semester</th>
			<th>Faculty</th>
			<th colspan="2">Actions</th>
		</tr>
	</thead>

	<tbody>
		@if(Model.Any()){
			foreach(var student in Model){
				<tr>
					<td>@student.Name</td>
					<td>@student.Semester</td>
					<td>@student.Faculty</td>
					<td>
						<button class="btn btn-secondary">
							<a class="text-white text-decoration-none" asp-action="Update" asp-route-id="@student.Id">Update</a>
						</button>
					</td>
					<td>
						<button class="btn btn-danger">
							<a class="text-white text-decoration-none" asp-action="Delete" asp-route-id="@student.Id">Delete</a>
						</button>
					</td>
				</tr>
			}

		} else{
			<tr>
				<td colspan="5">No content found</td>
			</tr>
		}
	</tbody>
</table>

