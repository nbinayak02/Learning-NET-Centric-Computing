@model SimpleCURDapplication.Models.Student

@{
	ViewData["Title"] = "Update Student";
}

<div class="w-50">
	<form class="d-flex justify-content-center flex-column " asp-action="Update" method="post">
		<input type="hidden" asp-for="Id" />
		<label class="m-2" asp-for="Name">Name</label>
		<input type="text" asp-for="Name" placeholder="Student Name" />
		<span asp-validation-for="Name"></span>

		<label class="m-2" asp-for="Semester">Semester</label>
		<input type="number" asp-for="Semester" placeholder="Semester" />
		<span asp-validation-for="Semester"></span>


		<label class="m-2" asp-for="Faculty">Faculty</label>
		<select asp-for="Faculty">
			<option value="select">Select Faculty</option>
			<option value="csit">CSIT</option>
			<option value="ce">Computer Engineering</option>
			<option value="civil">Civil Engineering</option>
		</select>

		<button class="btn btn-primary m-2">Update Student</button>

	</form>
</div>

